package com.christian.commons.clients;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

@FeignClient(name = "msv-productos")
public interface ProductoClient {
	
	@GetMapping("/id-categoria/{id}")
	boolean categoriaPresente(@PathVariable Long id);
	
	@GetMapping("/id-proveedor/{id}")
	boolean proveedorPresente(@PathVariable Long id);

}
